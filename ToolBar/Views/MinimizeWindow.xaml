<Window x:Class="ToolBar.Views.MinimizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MinimizeWindow" Height="100" Width="30"
        AllowDrop="True"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        Template="{DynamicResource MinimizeTemplate}"
        Visibility="Visible"
        >
    <Grid>
        <Label FontFamily="Segoe Script" FontSize="15" Foreground="AliceBlue" VerticalAlignment="Stretch" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="-26,32,-21,33" Width="73">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.408"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform> ToolBar
        </Label>
    </Grid>
</Window>
